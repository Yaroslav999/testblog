<ul class="nav nav-pills nav-tacked nested-nav">
	<% categories.each do |category, children| %>
	<li>
		<%= link_to category.name, category, class:"col-md-12 #{'active' if current_page? (category_path(category)) || @post.present? && @post.category == category}" %>
		<%= render 'shared/submenu_categories', categories: children if children.present? %>
	</li>
		
	<% end %>
</ul>