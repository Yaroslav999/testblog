<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
    <div class="container">
      <nav class="navbar navbar navbar-light bg-light">
          <ul class="nav ">
            <li class="nav-item <%= 'active' if current_page?(root_path) || current_page?(posts_path) %>">
              <a class="nav-link" href="<%= root_path %>"> Все статьи <span class="sr-only"></span></a>
            </li>
            <li class="nav-item <%= 'active' if current_page?(root_path) || current_page?(posts_path) %>">
              <a class="nav-link" href="<%= admin_categories_path %>"> Все категории <span class="sr-only"></span></a>
            </li>
            <% Category.order(:name).roots.each do |category| %>
              <li class="nav-item <%= 'active' if current_page?(category_path(category)) %>">
                <%= link_to category.name, category, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
          <ul class=" nav   pull-xs-right">
            <% if user_signed_in? %>
            <li class="nav-item ">
              <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "nav-link"  %>
            </li>
            <% else%>
            <li class="nav-item ">
              <%= link_to "Вход", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item ">
              <%= link_to "Регистрация", new_user_registration_path, class: "nav-link"  %>
            </li>
            <% end %>
          </ul>

      </nav>      
    </div>

<div class="container main">
  <div class="row">
    <div class="col-md-12 сol-sm-12 col-xs-12">
      <% flash.each do|name, message| %>
        <div class="alert <%= bootstrap_class_for(name) %>">
          <button class="close" data-dismiss="alert">&times;</button>
          <%= message %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-9 ">
       <%= yield %>
    </div>
    <div class="col-md-3 сol-sm-12 col-xs-12">
      <%= render 'shared/submenu' %>
      <div class="tag_cloud">
        <h2>ТЕГИ</h2>
         <% tag_cloud(Tag.counts, %w{tag1 tag2 tag3 tag4 tag5}) do |tag, css_class| %>
         <%= link_to tag.name, tag_path(tag.name), class: css_class%>
         <% end %>        
      </div>

    </div>

  </div>

</div>

  </body>
</html>
